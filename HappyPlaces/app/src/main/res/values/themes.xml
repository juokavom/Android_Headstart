<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HappyPlaces" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/blue_400</item>
        <item name="colorPrimaryDark">@color/blue_500</item>
        <item name="colorAccent">@color/blue_200</item>
    </style>

    <style name="CustomNoActionBarTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="android:statusBarColor">@color/blue_500</item>
    </style>

    <style name="CustomToolbarStyle">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
    </style>

</resources>